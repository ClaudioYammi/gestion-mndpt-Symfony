



{% block body %}
<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" href="/assets/bootstrap/bootstrap.css">
    <style>
        /* CSS styles */
        body {
            font-family: Arial, sans-serif;
        }

        h1 {
            text-align: center;
        }

        .container {
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: center;
            height: 90vh;
            width:900px;
            padding: 80px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin: auto;
        }
      

        .profile {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 20px;
        }

        .profile img {
            max-width: 300px;

        }
        .profile1 img {
           
            
            max-width: 100px;

        }

        form {
            max-width: 300px;
            margin: 0 auto;
        }

        label {
            display: block;
            margin-bottom: 5px;
        }

        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 8px;
            font-size: 14px;
            margin-bottom: 10px;
        }

        button[type="submit"] {
            background-color: #28a745;
            color: #fff;
            padding: 10px;
            font-size: 16px;
            border: none;
            cursor: pointer;
            width: 100%;
        }
    </style>
</head>
<body>
    <main class="main-content  mt-0">
        <section>
          
            
                
              <div class="container">
                
                
                  
                    <div class="card-header pb-0 text-start">
                        <a href="#" class="profile1">
                            <img src="/img/logo1.jpg">
                        </a>
                        <a href="#" class="profile">
                            <img src="/img/logo3.png">
                        </a>
                      <h4 class="font-weight-bolder">Inscription</h4>
                    {% for flash_error in app.flashes('verify_email_error') %}
                        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                    {% endfor %}
    
                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}
                      <p class="mb-0">Entrez vos informations </p>
                      <a href="{{ path('app_login') }}" class="btn btn-sm mb-0 me-1 btn-primary">Connexion</a>
                    </div>
                    <div class="card-body">
                      {{ form_start(registrationForm) }}
                      <div class="row">
                        <div class="col-6">
                          {{ form_row(registrationForm.email) }}
                        </div>
                        <div class="col-6">
                          {{ form_row(registrationForm.pseudo) }}
                        </div>
                      </div>
                      <div class="row mb-3">
                        {{ form_row(registrationForm.plainPassword, {
                            label: 'Password'
                        }) }}
                      </div>
                        <div class="form-check form-check-inline">
                            {{ form_label(registrationForm.agreeTerms) }}
                            {{ form_widget(registrationForm.agreeTerms) }}
                        </div>
                        <br>
                        <button type="submit" class="btn btn-lg btn-primary btn-lg w-100 mt-4 mb-0">Inscription</button>
                    {{ form_end(registrationForm) }}
                    
                        
                     
                    
                    
                    </div>
                    <div class="card-footer text-center pt-0 px-lg-2 px-1">
                      <p class="mb-4 text-sm mx-auto">
                      </p>
                    </div>
                  </div>
                </div>
                
              </div>
            </div>
          </div>
        </section>
    
     </main>       
        </form>
    </div>
</body>
</html>
{% endblock %}