



{% block body %}
<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" href="/assets/bootstrap/bootstrap.css">
    <style>
        /* CSS styles */
        body {
            font-family: Arial, sans-serif;
        }

        h1 {
            text-align: center;
        }

        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 80vh;
            width: 400px;
            padding: 50px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin: auto;
        }
      

        .profile {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 20px;
        }

        .profile img {
            max-width: 200px;

        }
        .profile1 img {
            max-width: 100px;

        }

        form {
            max-width: 300px;
            margin: 0 auto;
        }

        label {
            display: block;
            margin-bottom: 5px;
        }

        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 8px;
            font-size: 14px;
            margin-bottom: 10px;
        }

        button[type="submit"] {
            background-color: #28a745;
            color: #fff;
            padding: 10px;
            font-size: 16px;
            border: none;
            cursor: pointer;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="container">
        <a href="#" class="profile1">
            <img src="/img/logo1.jpg">
        </a>
        <a href="#" class="profile">
            <img src="/img/logo3.png">
        </a>
        
        <form>
          
            
                    

                  {% if error %}
                      <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                  {% endif %}
  
                  {% if app.user %}
                      <div class="mb-3">
                          You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                      </div>
                  {% endif %}
                    <p class="mb-0">Entrez vos informations </p>
                  
                  <div class="card-body">
                    <form role="form">
                      <div class="mb-3">
                        {# <input type="email" class="form-control form-control-lg" placeholder="Email" aria-label="Email"> #}
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control form-control-lg" autocomplete="email" aria-label="Email" placeholder="Votre adresse email" required autofocus>
                      </div>
                      <div class="mb-3">
                        <input type="password" name="password" id="inputPassword" class="form-control form-control-lg" autocomplete="current-password" placeholder="Mot de passe" required>
                          <input type="hidden" name="_csrf_token"
                              value="{{ csrf_token('authenticate') }}"
                          >
                      </div>
                      <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="rememberMe">
                        <label class="form-check-label" for="rememberMe">Remember me</label>
                      </div>
                      <div class="text-center">
                        <button type="submit" class="btn btn-lg btn-primary btn-lg w-100 mt-4 mb-0">Connexion</button>
                        <a href="{{ path('app_register') }}" >Inscription</a>
                      </div>
                    </form>
                  </div>
                  <div class="card-footer text-center pt-0 px-lg-2 px-1">
                    <p class="mb-4 text-sm mx-auto">
                      {# <a href="javascript:;" class="text-primary text-gradient font-weight-bold">Sign up</a> #}
                      <a href="{{ path('app_forgot_password_request') }}"> Vous avez oublier votre mot de passe ?</a>
                    </p>
                  </div>
        
            
        </form>
    </div>
</body>
</html>
{% endblock %}