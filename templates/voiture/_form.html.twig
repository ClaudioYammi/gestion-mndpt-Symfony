                {{ form_errors(form.matriculevoiture)}}
            </div>
        </div>
        <div class="col-6">
            <label>Date entrer voiture</label>   
            <div class="" >
                {{ form_widget(form.dateentrevoiture)}}
                {{ form_errors(form.dateentrevoiture)}}
            </div>
        </div>
        <div class="col-6">
            <label>Selectionner un matricule chauffeur</label>
            <div class="" >
                {{ form_widget(form.matriculechauffeur)}}
                {{ form_errors(form.matriculechauffeur)}}
            </div>
        </div>
    </div>
    <div class="row mb-5">
        <div class="col-6">
            <label>Selectionner un direction</label>   
            <div class="" >
                {{ form_widget(form.abrdirection)}}
                {{ form_errors(form.abrdirection)}}
            </div>
        </div>
        <div class="col-6">
            <label>Selectionner un genre voiture</label>
            <div class="" >
                {{ form_widget(form.genre)}}
                {{ form_errors(form.genre)}}
            </div>
        </div>
        <div class="col-6">
            <label>Selectionner un marque voiture</label>
            <div class="" >
                {{ form_widget(form.marque)}}
                {{ form_errors(form.marque)}}
            </div>
        </div>
        <div class="col-6">
            <label>Selectionner un type voiture</label>
            <div class="" >
                {{ form_widget(form.type)}}
                {{ form_errors(form.type)}}
            </div>
        </div>
    
    <div class="row mb-5">
        <button class="btn  btn-success  mx-2 mt-3">{{ button_label|default('save') }}</button>
    </div>
</div>

{{ form_end(form) }}
